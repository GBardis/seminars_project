<%= link_to 'new seminar', new_seminar_path%>
<%= link_to'Εγγραφή', new_user_registration_path%>
<%= link_to 'Συνδεση', new_user_session_path%>

<% @seminars.each do |seminar| %>
<div class="container">
 <ul class="list-group" >
<% if seminar.photos.exists?%>
 <li class="list-group-item" style="width:300px;height:300px"><%= image_tag seminar.photos.first.image.url(:medium) ,class: "img-thumbnail"%></li>
 <%end%>
 <li class="list-group-item"><%= seminar.title%></li>
 <li class="list-group-item"><%= seminar.description%></li></li>
 <li class="list-group-item"><%= seminar.author%></li>
 <li class="list-group-item"><%= seminar.company%></li>
 <li class="list-group-item"><%= number_to_currency(seminar.price,:unit => "€")%></li>
 <li class="list-group-item"><%= seminar.start_date%></li>
 <li class="list-group-item"><%= seminar.end_date%></li>
 <li class="list-group-item"><%= link_to 'show', seminar_path(seminar)%> | <%= link_to 'edit',edit_seminar_path(seminar)%> | <%= link_to 'Destroy', seminar_path(seminar),method: :delete,remote: true,id: "seminar_container" %></li>  
 </ul>
</div>
<%end%>